@using System.Security.Claims
@model DiagnosticsViewModel

<h1>Authentication cookie</h1>

<h3>Claims</h3>
<dl>
    @foreach(Claim claim in Model.AuthenticateResult.Principal.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h3>Properties</h3>
<dl>
    @foreach(KeyValuePair<string, string> prop in Model.AuthenticateResult.Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>

@if(Model.Clients.Any())
{
    <h3>Clients</h3>
    <ul>
        @foreach(string client in Model.Clients)
        {
            <li>@client</li>
        }
    </ul>
}
